<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/Background.CardView"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_geofenceName"
            style="@style/TextView.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/Margin.Half"
            tools:text="Geofence Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/Margin.Half"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.Medium"
                android:layout_width="@dimen/Width.Label"
                android:layout_height="wrap_content"
                android:text="@string/Label.Radius" />

            <TextView
                android:id="@+id/tv_geofenceRadius"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Label.Radius" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>